<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeberSemama7Sqlite.Registro" Title="Registro de Usuarios">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Entry x:Name="txtNombre" Placeholder="Ingrese el Nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el Usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la Contrasena" IsPassword="True"/>
            <Button x:Name="btnAgregar" Text="Agregar" Clicked="btnAgregar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>